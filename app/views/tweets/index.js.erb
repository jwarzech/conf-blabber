<% unless @tweets.nil? %>
	var index = 0;
	<% @tweets.each do |tweet| %>
		$($('.tweet-container')[index++]).html("<%= escape_javascript(raw render(tweet)) %>");
	
	<% end %>
<% end %>
$('#latest_tweet').val("<%= escape_javascript(raw @latest_tweet) %>")